<div class="container-fluid">
  <div class="row p-3  navbar-lewagon">
    <div><img src="https://picsum.photos/100/100?image=660" alt="" class="avatar"></div>
    <div><%= link_to 'Create your cocktail', new_cocktail_path, id:"create" %></div>
  </div>
  <div class="row justify-content-center mb-3 banner">
    <h1>Cocktails</h1>
  </div>
  <div style="display: flex; flex-wrap: wrap; justify-content: center; align-items: center; padding: 10px; ">
    <% @cocktails.each do |c| %>
      <div style="background: linear-gradient(135deg,rgba(0,0,0,0.4) 0%, rgba(0,0,0,0.3) 60%), url('<%= c.url %>'); background-size: cover; width: 400px; height: 300px; margin: 10px; display: flex; justify-content: center; align-items: center; box-shadow: 0 0 8px rgba(0, 0, 0.4);" id="card-d-img">
        <h5 style="font-size: 20px;"><%= link_to c.name, cocktail_path(c.id), id:"card-d-title" %></h5>
      </div>
      <%= cl_image_tag(<%= c.url %>,
      width: 400, height: 300, crop: :fill) %>
    <% end %>
  </div>
</div>

