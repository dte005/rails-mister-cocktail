<div class="container">
  <div class="row justify-content-center mb-3">
    <%= link_to 'Create your cocktail', new_cocktail_path %>
  </div>
  <div class="row justify-content-center mb-3">
    <h1>Cocktails</h1>
  </div>
  <div class="row">
    <% @cocktails.each do |c| %>
      <div class="col-md-4 mb-3">
        <%= link_to c.name, cocktail_path(c.id) %>
      </div>
    <% end %>
  </div>
</div>
